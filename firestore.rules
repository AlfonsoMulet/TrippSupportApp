rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Users collection
    match /users/{userId} {
      allow read: if isSignedIn();
      allow create, update: if isSignedIn();
      allow delete: if isOwner(userId);
    }

    // Trips collection
    match /trips/{tripId} {
      allow read: if isSignedIn() && (
        resource.data.userId == request.auth.uid ||
        resource.data.ownerId == request.auth.uid ||
        resource.data.sharedWith.hasAny([request.auth.uid])
      );
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update: if isSignedIn() && (
        resource.data.userId == request.auth.uid ||
        resource.data.ownerId == request.auth.uid ||
        (resource.data.isCollaborative && resource.data.sharedWith.hasAny([request.auth.uid]))
      );
      allow delete: if isSignedIn() && (
        resource.data.userId == request.auth.uid ||
        resource.data.ownerId == request.auth.uid
      );
    }

    // Stops collection
    match /stops/{stopId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }

    // Transport segments collection
    match /transportSegments/{segmentId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }

    // Share tokens collection
    match /shareTokens/{tokenId} {
      // Anyone can read share tokens (needed for sharing functionality)
      allow read: if true;

      // Only authenticated users can create share tokens for their own trips
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;

      // Only token owner can update or delete
      allow update, delete: if isSignedIn() && resource.data.ownerId == request.auth.uid;
    }

    // Activity logs collection (if needed for collaborative features)
    match /activityLogs/{logId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
    }

    // Friend invite tokens collection
    match /friendInviteTokens/{tokenId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update: if isSignedIn();
      allow delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    // Friendships collection
    match /friendships/{friendshipId} {
      allow read: if isSignedIn() && (
        resource.data.userId1 == request.auth.uid ||
        resource.data.userId2 == request.auth.uid
      );
      allow create: if isSignedIn() && (
        request.resource.data.userId1 == request.auth.uid ||
        request.resource.data.userId2 == request.auth.uid
      );
      allow delete: if isSignedIn() && (
        resource.data.userId1 == request.auth.uid ||
        resource.data.userId2 == request.auth.uid
      );
    }
  }
}
